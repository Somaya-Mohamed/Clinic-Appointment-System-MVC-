@model IEnumerable<Clinic_Appointment_System.Models.Doctor>
@{
    ViewData["Title"] = "Doctors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .table-container {
            background: linear-gradient(135deg, #ffffff, #dbeafe);  
            border: 2px solid #93c5fd;  
            border-radius: 1rem;  
            box-shadow: 0 8px 16px -2px rgba(0, 0, 0, 0.1);  
            padding: 1.5rem;
        }

            .table-container table {
                background-color: #ffffff;  
                border-radius: 0.75rem;
                overflow: hidden;
            }

            .table-container th {
                background-color: #1e3a8a;
                color: #ffffff;
                padding: 1rem;
                font-weight: 600;
            }

            .table-container td {
                padding: 1rem;
                color: #1e3a8a;  
            }

            .table-container tr:hover {
                background-color: #eff6ff;  
            }

        .btn-create {
            background-color: #1d4ed8;  
            color: #ffffff;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            transition: background-color 0.2s ease, transform 0.2s ease;
        }

            .btn-create:hover {
                background-color: #1e3a8a;  
                transform: translateY(-2px);
            }

        .action-link {
            color: #1d4ed8;  
            transition: color 0.2s ease;
        }

            .action-link:hover {
                color: #1e3a8a;  
            }

        .action-icon {
            font-size: 1.2rem;  
            margin-right: 0.75rem;  
            transition: color 0.2s ease;
        }

        .filter-form {
            margin-bottom: 1.5rem;
            /* display: flex; */
            align-items: center;
        }

            .filter-form select {
                margin-right: 1rem;
                padding: 0.5rem;
                border-radius: 0.5rem;
                border: 1px solid #93c5fd;
            }

            .filter-form button {
                background-color: #1d4ed8;
                color: #ffffff;
                padding: 0.5rem 1rem;
                border-radius: 0.5rem;
            }

                .filter-form button:hover {
                    background-color: #1e3a8a;
                }
    </style>
}

<h1 class="text-4xl font-extrabold text-blue-900 mb-6 tracking-tight shadow-sm">Doctors List</h1>

<a asp-action="Create" class="btn-create mb-6 inline-block">Create New</a>

<!-- Specialization filtering -->
<form asp-action="Index" method="get" class="filter-form">
    <label for="specialization">Filter by Specialization:</label>
    <select id="specialization" name="specialization" class="w-auto">
        <option value="">All</option>
        @foreach (var spec in ViewBag.Specializations)
        {
            bool isSelected = (string)ViewData["CurrentSpecialization"] == spec;
            @:<option value="@spec" @(isSelected ? "selected" : "")>@spec</option>
        }
    </select>
    <button type="submit">Filter</button>
</form>

<div class="table-container">
    <table class="min-w-full">
        <thead>
            <tr>
                <th class="text-left">Name</th>
                <th class="text-left">Specialization</th>
                <th class="text-left">Phone</th>
                <th class="text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-b">
                    <td>@item.Name</td>
                    <td>@item.Specialization</td>
                    <td>@item.Phone</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.DoctorId" title="View Details"><i class="fas fa-eye text-blue-600 hover:text-blue-800 action-icon"></i></a>
                        <a asp-action="Edit" asp-route-id="@item.DoctorId" title="Edit"><i class="fas fa-edit text-yellow-600 hover:text-yellow-800 action-icon"></i></a>
                        <a asp-controller="Appointments" asp-action="ByDoctor" asp-route-id="@item.DoctorId" title="View Appointments"><i class="fas fa-calendar-check text-green-600 hover:text-green-800 action-icon"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.DoctorId" title="Delete"><i class="fas fa-trash text-red-600 hover:text-red-800 action-icon"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




