@model Clinic_Appointment_System.Models.Doctor
@{
    ViewData["Title"] = "Delete Doctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .delete-container {
            background: linear-gradient(135deg, #ffffff, #dbeafe);
            border: 2px solid #93c5fd;
            border-radius: 1rem;
            padding: 2.5rem;
            box-shadow: 0 8px 16px -2px rgba(0, 0, 0, 0.1);
        }

            .delete-container dt {
                color: #1e40af;
                font-weight: 600;
                font-size: 1.125rem;
            }

            .delete-container dd {
                color: #1e3a8a;
                font-size: 1rem;
                margin-bottom: 1.5rem;
            }

        .error-message {
            background-color: #fef2f2;
            color: #dc2626;
            padding: 1.5rem;
            border-radius: 0.75rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-danger {
            background-color: #dc2626;
            color: #ffffff;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            transition: background-color 0.2s ease, transform 0.2s ease;
        }

            .btn-danger:hover {
                background-color: #b91c1c;
                transform: translateY(-2px);
            }

        .btn-secondary {
            background-color: #6b7280;
            color: #ffffff;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            transition: background-color 0.2s ease, transform 0.2s ease;
        }

            .btn-secondary:hover {
                background-color: #4b5563;
                transform: translateY(-2px);
            }
    </style>
}

<h1 class="text-4xl font-extrabold text-blue-900 mb-6 tracking-tight shadow-sm">Delete Doctor</h1>

<div class="error-message">
    Are you sure you want to delete this Doctor and their patient's appointment?
</div>

<div class="delete-container">
    <h4 class="text-2xl font-semibold text-blue-900 mb-4">Doctor</h4>
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <dt>Doctor Name</dt>
        <dd>@Model.Name</dd>
        <dt>Doctor Specialization</dt>
        <dd>@Model.Specialization</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DoctorId" />
        <div class="flex space-x-4 mt-6">
            <button type="submit" class="btn-danger">Delete</button>
            <a asp-action="Index" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>