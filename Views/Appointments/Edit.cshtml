@model Clinic_Appointment_System.Models.Appointment
@{
    ViewData["Title"] = "Edit Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .form-container {
            background: linear-gradient(135deg, #ffffff, #dbeafe);
            border: 2px solid #93c5fd;
            border-radius: 1rem;
            padding: 2.5rem;
            box-shadow: 0 8px 16px -2px rgba(0, 0, 0, 0.1);
        }

            .form-container label {
                color: #1e40af;
                font-weight: 600;
                font-size: 1.125rem;
            }

            .form-container input, .form-container select, .form-container textarea {
                background-color: #ffffff;
                border: 1px solid #93c5fd;
                border-radius: 0.5rem;
                padding: 0.75rem;
                color: #1e3a8a;
                width: 100%;
            }

                .form-container input:focus, .form-container select:focus, .form-container textarea:focus {
                    outline: none;
                    border-color: #1d4ed8;
                    box-shadow: 0 0 0 3px rgba(29, 78, 216, 0.2);
                }

        .error-message {
            background-color: #fef2f2;
            color: #dc2626;
            padding: 1.5rem;
            border-radius: 0.75rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #1d4ed8;
            color: #ffffff;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            transition: background-color 0.2s ease, transform 0.2s ease;
        }

            .btn-primary:hover {
                background-color: #1e3a8a;
                transform: translateY(-2px);
                color: #ffffff;
            }

        .btn-secondary {
            background-color: #6b7280;
            color: #ffffff;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            transition: background-color 0.2s ease, transform 0.2s ease;
        }

            .btn-secondary:hover {
                background-color: #4b5563;
                transform: translateY(-2px);
            }
    </style>
}

<h1 class="text-4xl font-extrabold text-blue-900 mb-6 tracking-tight shadow-sm">Edit Appointment</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="error-message">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="form-container">
    <form asp-action="Edit" asp-controller="Appointments" method="post" novalidate>
        <input type="hidden" asp-for="AppointmentId" />
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
        <div class="mb-4">
            <label asp-for="DoctorId" class="block mb-1">Doctor</label>
            <select asp-for="DoctorId" asp-items="ViewBag.Doctors" class="w-full"></select>
            <span asp-validation-for="DoctorId" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="PatientId" class="block mb-1">Patient</label>
            <select asp-for="PatientId" asp-items="ViewBag.Patients" class="w-full"></select>
            <span asp-validation-for="PatientId" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="AppointmentDateTime" class="block mb-1">Date and Time</label>
            <input asp-for="AppointmentDateTime" class="w-full" type="datetime-local" />
            <span asp-validation-for="AppointmentDateTime" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Status" class="block mb-1">Status</label>
            <select asp-for="Status" class="w-full">
                @foreach (var status in Enum.GetValues(typeof(Clinic_Appointment_System.Models.AppointmentStatus)))
                {
                    <option value="@status" selected="@(Model.Status == (Clinic_Appointment_System.Models.AppointmentStatus)status ? "selected" : "")">@status</option>
                }
            </select>
            <span asp-validation-for="Status" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Notes" class="block mb-1">Notes</label>
            <textarea asp-for="Notes" class="w-full"></textarea>
            <span asp-validation-for="Notes" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Prescription" class="block mb-1">Prescription</label>
            <textarea asp-for="Prescription" class="w-full"></textarea>
            <span asp-validation-for="Prescription" class="text-red-600 text-sm"></span>
        </div>
        <div class="flex space-x-4 mt-6">
            <input type="submit" value="Save" class="btn-primary" />
            <a asp-action="Index" asp-controller="Appointments" class="btn-secondary">Back</a>
        </div>
        @Html.AntiForgeryToken()
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}